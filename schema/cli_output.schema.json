{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PrimeCodexCLIOutput",
  "type": "object",
  "required": ["motivational_state", "archetypal_resonance"],
  "properties": {
    "motivational_state": {
      "type": "object",
      "required": ["desire", "fear", "valence", "tension", "policy", "braid_code"],
      "properties": {
        "desire": {"type": "number", "minimum": 0, "maximum": 1},
        "fear": {"type": "number", "minimum": 0, "maximum": 1},
        "valence": {"type": "number", "minimum": -1, "maximum": 1},
        "tension": {"type": "number", "minimum": 0, "maximum": 1},
        "policy": {"type": "string", "enum": ["investigate", "approach", "avoid", "pause"]},
        "braid_code": {"type": "integer", "minimum": 0, "maximum": 3}
      }
    },
    "archetypal_resonance": {
      "type": "object",
      "required": ["dominant_pattern", "serpent_activation", "flame_activation", "void_activation", "unity_activation", "resonance_mode", "harmonic_frequency"],
      "properties": {
        "dominant_pattern": {"type": ["string", "null"]},
        "serpent_activation": {"type": "number", "minimum": 0},
        "flame_activation": {"type": "number", "minimum": 0},
        "void_activation": {"type": "number", "minimum": 0},
        "unity_activation": {"type": "number", "minimum": 0},
        "resonance_mode": {"type": "string"},
        "harmonic_frequency": {"type": "number", "minimum": 0}
      }
    }
  }
}
